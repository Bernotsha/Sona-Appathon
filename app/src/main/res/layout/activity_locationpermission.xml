<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".Locationpermission"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="50dp"
        app:contentPadding="10sp"
        android:background="@color/darkpink">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/dark"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DECODERS"
            android:textAlignment="center"
            android:background="@color/dark"
            android:gravity="fill_horizontal"
            android:textColor="@color/light"
            android:padding="10dp"
            android:textSize="15dp"


            />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Get ready to explore the Places and Restaurants!"
     android:background="@color/dark"
     android:gravity="fill_horizontal"
     android:textColor="@color/light"
     android:padding="10dp"
     android:textSize="15dp"


     />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This explores the nearest places to you!"
            android:background="@color/dark"
            android:gravity="fill_horizontal"
            android:textColor="@color/light"
            android:padding="10dp"
            android:textSize="15dp"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This requires your location permission."
            android:background="@color/dark"
            android:padding="10dp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/light"
            android:textSize="15dp"


            />


        <Button
            android:layout_width="800px"
            android:gravity="center"
            android:layout_height="200px"
            android:text="Start exploring"
            android:id="@+id/exploring"
            android:layout_marginBottom="20sp"
            android:background="@color/darkpink"
            android:textColor="@color/light"
            android:textSize="60px"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>